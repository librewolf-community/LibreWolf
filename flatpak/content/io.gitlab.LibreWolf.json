{
    "app-id": "io.gitlab.LibreWolf",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "librewolf",
    "modules": [
        {
            "name": "librewolf",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share && mv librewolf -t /app/share",
                "mkdir -p /app/bin && ln -s /app/share/librewolf/librewolf /app/bin/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "flatpak/source"
                }
            ]
        }
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home:rw",
        "--share=network"
    ]
}
